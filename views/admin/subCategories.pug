extends ../layouts/mainLayout.pug
block title 
    title Alt Kategoriler 

block content     
    if subCategories.length > 0
      table.table.table-bordered
        thead 
          tr 
            td Category Name 
            td Yayında Mı?
            td Üst Kategori 
            th 
          tbody 
            each category in subCategories 
              tr 
                td #{category.name}
                td
                    if category.status
                        .fa-solid.fa-check 
                    else 
                        .fa-solid.fa-x
                td #{category.topCategory.name}
                td 
                  a.btn.btn-primary.btn-sm.me-3(href=`/admin/edit-subCategory/${category._id}`) Edit
                  a.btn.btn-danger.btn-sm(href=`/admin/delete-subCategory/${category._id}`) Delete
    else 
      h1 Category No